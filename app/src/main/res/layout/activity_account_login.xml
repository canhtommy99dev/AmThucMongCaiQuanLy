<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AccountLogin"
    android:background="@drawable/addplus">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack2111"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/txtBanDo111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:text="Account"
            android:textColor="#fff"
            android:textSize="30sp" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginLeft="150dp"
            android:id="@+id/signout11"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_exit_to_app_black_24dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
    <TextView
        android:id="@+id/txtAccount1222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account của Bạn"
        android:layout_centerInParent="true"
        android:textSize="20sp"/>

        <EditText
            android:layout_margin="15sp"
            android:paddingLeft="10sp"
            android:hint="Password Mới"
            android:id="@+id/edtChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:layout_margin="15sp"
            android:textColor="#fff"
            android:background="@drawable/round"
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thay Đổi Mật Khẩu" />
    </LinearLayout>
</LinearLayout>