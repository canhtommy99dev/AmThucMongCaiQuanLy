<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterEmail"
    android:background="@drawable/backqlapp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:paddingTop="70dp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐĂNG KÝ QUẢN LÝ"
            android:layout_gravity="center"
            android:textSize="30dp"/>


        <EditText
            android:layout_margin="10dp"
            android:id="@+id/edtUserSignUp"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/edttext"
            android:ems="10"
            android:hint="User"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_margin="10dp"
            android:background="@drawable/edttext"
            android:id="@+id/edtPasswordSignUp"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />

        <Button
            android:id="@+id/btnRegister1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng Ký" />

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trở Lại" />

    </LinearLayout>
</LinearLayout>